<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tjanneck.migronitor">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.tjanneck.migronitor.MainActivity"
            android:label="@string/app_name">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="de.tjanneck.migronitor.DbRotator"
            android:enabled="true" />

        <activity
            android:name="de.tjanneck.migronitor.Einstellungen"
            android:label="@string/title_activity_einstellungen" />
        <activity
            android:name="de.tjanneck.migronitor.MedikamentenSettingsActivity"
            android:label="@string/title_activity_einstellungen" />
        <activity
            android:name="de.tjanneck.migronitor.MedikamenteNehmen"
            android:label="Medikamente nehmen" />
        <activity
            android:name="de.tjanneck.migronitor.AttackenBearbeiten"
            android:label="Atacken bearbeiten" />
        <activity
            android:name="de.tjanneck.migronitor.AttackeBearbeiten"
            android:label="@string/title_activity_attacke_bearbeiten"></activity>
    </application>

</manifest>