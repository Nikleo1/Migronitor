<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/attacke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="#5a3dff49"
        android:enabled="true"
        android:onClick="OnClickAttacke"
        android:text="Attacke"
        android:minHeight="50dp" />

    <Button
        android:id="@+id/mnehmen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/attacke"
        android:layout_marginBottom="10dp"
        android:background="#50ffd200"
        android:onClick="OnClickMedikamente"
        android:text="Medikamente nehmen"
        android:minHeight="50dp" />

    <Button
        android:id="@+id/schlafen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mnehmen"
        android:layout_marginBottom="10dp"
        android:background="#4b01a0ff"
        android:onClick="OnClickSchlafen"
        android:text="Schlafen"
        android:minHeight="50dp" />

    <TextView
        android:id="@+id/schmerz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:gravity="right"
        android:text="4"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="170dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/schlafen"
        android:text="SchmerzstÃ¤rke (0 - 10) :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/schlafen"
        android:layout_alignRight="@+id/schlafen"
        android:layout_alignTop="@+id/schmerz"
        android:background="#41ff0600"
        android:onClick="OnClickPlus"
        android:text="+"
        android:textSize="75dp"
        android:minWidth="100dp" />

    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plus"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/plus"
        android:layout_below="@+id/plus"
        android:background="#4100ff1b"
        android:onClick="OnClickMinus"
        android:text="-"
        android:textSize="75dp"
        android:minWidth="100dp" />

</RelativeLayout>
